@model MVCProject.Models.mvctblUserModel
@{
    ViewBag.Title = "AddOrEdit";
}

<h2>AddOrEdit</h2>
<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model=>model.UserId)

        <div class="form-group">
            @Html.LabelFor(model=>model.Name)
            @Html.EditorFor(model=>model.Name)
            @Html.ValidationMessageFor(model=>model.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DOB)
            @Html.EditorFor(model => model.DOB)
            @Html.ValidationMessageFor(model => model.DOB)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Designation)
            @Html.EditorFor(model => model.Designation)
            @Html.ValidationMessageFor(model => model.Designation)
        </div>
        <div class="form-group">
           @Html.LabelFor(model => model.Skills)
            @*@Html.EditorFor(model => model.Skills)*@
            @Html.ValidationMessageFor(model => model.Skills)
            @Html.DropDownList("Skills", new List<SelectListItem> {
               new SelectListItem {Text="MVC",Value="MVC"},
               new SelectListItem {Text="Asp.Net",Value="Asp.Net" },
               new SelectListItem { Text="JavaScript",Value="JavaScript"},
               new SelectListItem { Text="jQuery",Value="jQuery"},
               new SelectListItem { Text="SqlServer",Value="SqlServer"},
           }, "Select Skills")
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn button" />
            <input type="reset" value="Reset" class="btn button" />
        </div>
    }
</div>
         @section scripts{
             @Scripts.Render("~/bundles/jqueryval")
             }